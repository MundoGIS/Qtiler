# Qtiler environment configuration
# Edit these values to tune the Python worker pool and supervision.

# Number of Node worker processes (defaults to number of CPU cores when empty)
WORKER_COUNT=0

# Number of persistent Python worker processes per Node worker
PY_WORKER_POOL_SIZE=2

# Per-job timeout (seconds). Master will kill/restart worker on timeout.
WORKER_JOB_TIMEOUT_S=300

# Recycle worker after this many jobs (0 = disabled)
JOB_MAX_PER_WORKER=100

# Worker restart/backoff tuning
WORKER_RESTART_DELAY_S=5
WORKER_MAX_RESTARTS=6
WORKER_RESTART_WINDOW_S=60

# Memory-based recycling (MB). 0 = disabled
WORKER_MAX_MEMORY_MB=0

# Optional global cap (requires Redis)
GLOBAL_JOB_MAX=0

# OSGeo4W / QGIS settings (adjust to your installation)
O4W_BATCH=C:\\QGIS\\bin\\o4w_env.bat
PYTHON_EXE=C:\\QGIS\\bin\\python.exe

# Keep QGIS loaded in persistent workers
QTILER_PERSISTENT_WORKER=1
